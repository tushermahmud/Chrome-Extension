{
    "name": "Chrome-ext-Firebase",
    "version": "0.1",
    "description": "Chrome-ext-Firebase..",
    "permissions": [
        "identity",
        "activeTab",
        "<all_urls>",
        "tabs",
        "identity.email"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["app.js"],
        "run_at": "document_end"
    }],
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}